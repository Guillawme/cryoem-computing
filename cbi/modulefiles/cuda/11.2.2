#%Module1.0

proc ModulesHelp { } {
global dotversion
puts stderr "\tCUDA Libraries and Toolkit, version 11.2.2"
}

module-whatis "CUDA Libraries and Toolkit. Documentation: https://docs.nvidia.com/cuda/archive/11.2.2/"

conflict cuda

# To avoid repetitions in this module file
set program cuda
set version 11.2.2
set prefix /opt/$program-$version

prepend-path PATH $prefix/bin
prepend-path LD_LIBRARY_PATH $prefix/lib64
prepend-path CPATH $prefix/include
prepend-path C_INCLUDE_PATH $prefix/include
prepend-path CPLUS_INCLUDE_PATH $prefix/include
prepend-path INCLUDE $prefix/include
setenv CUDA_HOME $prefix
