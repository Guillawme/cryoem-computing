#%Module1.0

proc ModulesHelp { } {
global dotversion
puts stderr "\tGlobus Connect Personal, version 3.1.6"
}

module-whatis "File transfer program. Documentation: https://docs.globus.org/how-to/get-started/"

# To avoid repetitions in this module file
set program globusconnectpersonal
set version 3.1.6
set prefix /opt/$program-$version

prepend-path PATH $prefix

# Looks like Globus Connect Personal depends on Python 2.7, but system Python in Rocky is a Python 3
set condaprefix /opt/miniconda3/envs/$program
prepend-path PATH $condaprefix/bin
prepend-path INCLUDE $condaprefix/include
prepend-path LD_LIBRARY_PATH $condaprefix/lib
prepend-path MANPATH $condaprefix/share/man

